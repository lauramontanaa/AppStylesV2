<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentClothesView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetailClo_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="" />

        <TextView
            android:id="@+id/tvDetailClo_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="" />

        <Spinner
            android:id="@+id/spDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"/>

        <Button
            android:id="@+id/btnAgregarProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnAgregarProducto" />

        <Button
            android:id="@+id/btnComprarProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnComprarProducto" />

    </LinearLayout>

</FrameLayout>